# Railway Environment Variables Configuration
# Copy these to your Railway project's environment variables

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=.railway.app,.up.railway.app

# Database (Railway provides DATABASE_URL automatically for PostgreSQL)
# For SQLite (development), no DATABASE_URL needed
# For PostgreSQL: DATABASE_URL is set automatically by Railway

# IBKR API Settings (internal container communication)
IBKR_HOST=127.0.0.1
IBKR_PORT=4001

# Email Settings (optional - for alerts)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production email:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Static Files (handled by WhiteNoise)
STATIC_URL=/static/
MEDIA_URL=/media/

# Railway-specific (automatically set by Railway)
# PORT=8080 (Railway sets this dynamically)
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=...
# RAILWAY_SERVICE_ID=...
